// Place your settings in this file to overwrite default and user settings.
{
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": {
            "when": "$(basename)"
        }
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": {
            "when": "$(basename)"
        }
    }
}